                //    $.ajax({
                //        url: "/Operations/GetStudentsForStudent",
                //        type: 'GET',
                //        data: { StudentId: $(this).attr('id') },
                //        dataType: 'html', // added data type
                //        success: function (res) {
                //            $('#selectStudents').html(res);
                //        },
                //        error: function (res) {
                //            ToastMessage('error', res);
                //        }
                //    });
                //});</script>
}